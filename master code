def get_yomamma():
    response = requests.get("https://api.yomomma.info/")
    json_data = json.loads(response.text)
    picture = json_data
    return (picture)


@client.command(description = 'who made me')
async def yomamma(ctx): 
	yomamma = get_yomamma()
	await ctx.send(ctx.author.mention + format(yomamma))


