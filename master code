def get_yomamma():
    response = requests.get("https://api.yomomma.info/")
    json_data = json.loads(response.text)
    picture = json_data
    return (picture)


@client.command()
async def yomamma(ctx,member:discord.Member): 
	yomamma = get_yomamma()
	await ctx.send(member.mention + format (str(yomamma)))


